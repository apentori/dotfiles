#!/usr/bin/env bash
set -eo pipefail

# Complet this later
conf_dir=("hypr" "dunst" "kitty" "rofi" "swaylock" "waybar" "wlogout")
for dir in "${conf_dir[@]}"
do
  echo "Creating symlink of ${dir}"
  ln -s "${HOME}/dotfiles/${dir}" "${HOME}/.config"
done

ln -s "${HOME}/dotfiles/.zshrc" "${HOME}"
ln -s "${HOME}/dotfiles/.gitconfig" "${HOME}"
