#!/usr/bin/env bash
set -eo pipefail

# Complet this later
conf_dir=("hypr" "dunst" "kitty" "rofi" "swaylock" "waybar" "wlogout" "alacritty" "nvim")
for dir in "${conf_dir[@]}"
do
  echo "Creating symlink of ${dir}"
  ln -sf "${HOME}/projects/dotfiles/${dir}" "${HOME}/.config"
done

ln -sf "${HOME}/bin " "${HOME}"
ln -sf "${HOME}/projects/dotfiles/.zshrc" "${HOME}"
ln -sf "${HOME}/projects/dotfiles/.gitconfig" "${HOME}"
